generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      UserRole @default(PLAYER)

  @@index([email])
}

model Game {
  id            String       @id @default(uuid())
  scheduledTime DateTime
  startedAt     DateTime?
  endedAt       DateTime?
  status        GameStatus   @default(LOBBY)
  createdBy     String
  prizes        Json
  calledNumbers Int[]        @default([])
  currentNumber Int?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  players       Player[]
  prizeQueue    PrizeQueue[]
  winners       Winner[]

  @@index([scheduledTime, status])
  @@index([createdBy])
}

model Player {
  id       String   @id @default(uuid())
  gameId   String
  userId   String
  userName String
  ticket   Json
  joinedAt DateTime @default(now())
  game     Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  winners  Winner[]

  @@unique([gameId, userId])
  @@index([gameId, userId])
}

model Winner {
  id           String      @id @default(uuid())
  gameId       String
  playerId     String
  category     WinCategory
  claimedAt    DateTime    @default(now())
  prizeClaimed Boolean     @default(false)
  prizeValue   Json?
  game         Game        @relation(fields: [gameId], references: [id], onDelete: Cascade)
  player       Player      @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@index([gameId, category])
  @@index([prizeClaimed])
}

model PrizeQueue {
  id             String      @id @default(uuid())
  userId         String
  gameId         String
  category       WinCategory
  prizeValue     Json
  status         QueueStatus @default(PENDING)
  attempts       Int         @default(0)
  lastAttempt    DateTime?
  error          String?
  idempotencyKey String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  game           Game        @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@unique([userId, gameId, category])
  @@index([status, createdAt])
  @@index([userId])
}

model PromotionalBanner {
  id           String   @id @default(uuid())
  imageUrl     String
  altText      String?
  linkUrl      String?
  isActive     Boolean  @default(true)
  displayOrder Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  fileSize     Int?
  height       Int?
  s3Key        String?
  uploadedBy   String?
  width        Int?

  @@index([isActive, displayOrder])
}

model YouTubeEmbed {
  id           String   @id @default(uuid())
  videoId      String   @unique
  title        String?
  description  String?
  isActive     Boolean  @default(true)
  displayOrder Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  embedId      String?
  videoUrl     String?

  @@index([isActive, displayOrder])
}

model YouTubeLiveStream {
  id          String   @id @default(uuid())
  embedId     String   @unique
  title       String?
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  videoUrl    String?
  uploadedBy  String?

  @@index([isActive])
}

enum GameStatus {
  LOBBY
  ACTIVE
  COMPLETED
  CANCELLED
}

enum WinCategory {
  EARLY_5
  TOP_LINE
  MIDDLE_LINE
  BOTTOM_LINE
  FULL_HOUSE
}

enum QueueStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  DEAD_LETTER
}

enum UserRole {
  PLAYER
  ORGANIZER
}
